<div class="top">
  <h1>Sign Up</h1>
  <h2>join the socialwino community</h2>
</div>
<div class="body">
  <%= form_for(@user) do |f| %>
    <% if @user.errors.any? %>
    <div id="error-container">
    <div class="ui-widget">
      <div class="ui-state-error ui-corner-all" style="padding: 0 .7em;">
          <span class="ui-icon ui-icon-alert" style="float: left; margin-right: .3em;"></span>
          <%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:
        <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
      <div class="clear"></div>
    </div>
    </div>
    <% end %>
    <div class="field">
      <%= f.label :name %><br />
      <%= f.text_field :name, :class => "textfield" %>
    </div>
    <div class="field">
      <%= f.label :username %><br />
      <%= f.text_field :username, :class => "textfield" %>
    </div>
    <div class="field">
      <%= f.label :email %><br />
      <%= f.text_field :email, :class => "textfield" %>
    </div>
    
    <div class="field">
      <%= f.label :password %><br />
      <%= f.password_field :password, :class => "textfield" %>
    </div>
    
    
    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, :class => "textfield" %>
    </div>
    
    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>
</div>
<div class="bottom"></div>



