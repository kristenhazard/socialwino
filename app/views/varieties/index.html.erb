<h1>Listing varieties</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Wine type</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @varieties.each do |variety| %>
  <tr>
    <td><%= variety.name %></td>
    <td><%= variety.wine_type %></td>
    <td><%= link_to 'Show', variety %></td>
    <td><%= link_to 'Edit', edit_variety_path(variety) %></td>
    <td><%= link_to 'Destroy', variety, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

